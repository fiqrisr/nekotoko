{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@nekotoko/admin/category": ["libs/admin/category/src/index.ts"],
      "@nekotoko/admin/http": ["libs/admin/http/src/index.ts"],
      "@nekotoko/admin/providers": ["libs/admin/providers/src/index.ts"],
      "@nekotoko/admin/types": ["libs/admin/types/src/index.ts"],
      "@nekotoko/api/auth": ["libs/api/auth/src/index.ts"],
      "@nekotoko/api/auth-shared": ["libs/api/auth-shared/src/index.ts"],
      "@nekotoko/api/category": ["libs/api/category/src/index.ts"],
      "@nekotoko/api/monolithic/category": [
        "libs/api/monolithic/category/src/index.ts"
      ],
      "@nekotoko/api/monolithic/users": [
        "libs/api/monolithic/users/src/index.ts"
      ],
      "@nekotoko/api/password": ["libs/api/password/src/index.ts"],
      "@nekotoko/api/roles": ["libs/api/roles/src/index.ts"],
      "@nekotoko/api/users": ["libs/api/users/src/index.ts"],
      "@nekotoko/api/utils": ["libs/api/utils/src/index.ts"],
      "@nekotoko/prisma/monolithic": ["libs/prisma/monolithic/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
