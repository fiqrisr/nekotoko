{
  "root": "libs/prisma/monolithic",
  "sourceRoot": "libs/prisma/monolithic/src",
  "targets": {
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["libs/prisma/monolithic/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/libs/prisma/monolithic"],
      "options": {
        "jestConfig": "libs/prisma/monolithic/jest.config.js",
        "passWithNoTests": true
      }
    },
    "docker-db": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "cwd": "libs/prisma/monolithic",
        "command": "docker-compose -f docker-compose.db.yml up -d"
      }
    },
    "db-migrate-save": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "cwd": "libs/prisma/monolithic",
        "command": "prisma migrate dev"
      }
    },
    "db-generate": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "cwd": "libs/prisma/monolithic",
        "command": "prisma generate"
      }
    },
    "db-studio": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "cwd": "libs/prisma/monolithic",
        "command": "prisma studio"
      }
    },
    "seed": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "cwd": "libs/prisma/monolithic",
        "command": "ts-node scripts/seed.ts"
      }
    }
  },
  "tags": ["type:prisma"]
}
